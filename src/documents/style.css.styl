@media screen and (max-width: 960px)
  // Body
  body
    padding: 0 2em

  // Mainbar
  header.heading,
  nav.pages,
  footer.footing,
  article.page
    width: 95%


@media screen and (max-width: 320px)
  // Body
  body
    padding: 0 0.5em

  // Mainbar
  header.heading,
  nav.pages,
  footer.footing,
  article.page
    width: 100%

  // Navigation
  nav.pages
    font-size: 35px
